{
  "name": "install-flox-action",
  "description": "Installs flox on GitHub Actions for the supported platforms: Linux and macOS. ",
  "version": "1.0.0",
  "author": "Flox <hello@floxdev.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/flox/install-flox-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flox/install-flox-action.git"
  },
  "bugs": {
    "url": "https://github.com/flox/install-flox-action/issues"
  },
  "keywords": [
    "github",
    "actions",
    "javascript",
    "flox"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "patch-package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "package": "ncc build src/index.js --license LICENSE",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run test && npm run package"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "devDependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@vercel/ncc": "^0.38.4",
    "babel-preset-jest": "^30.2.0",
    "jest": "^30.2.0",
    "make-coverage-badge": "^1.2.0",
    "md5": "^2.3.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.1",
    "which": "^6.0.0"
  }
}
