{
  "name": "install-flox-action",
  "description": "Installs flox on GitHub Actions for the supported platforms: Linux and macOS. ",
  "version": "1.0.0",
  "author": "Flox <hello@floxdev.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/flox/install-flox-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flox/install-flox-action.git"
  },
  "bugs": {
    "url": "https://github.com/flox/install-flox-action/issues"
  },
  "keywords": [
    "github",
    "actions",
    "javascript",
    "flox"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "patch-package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.js --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "devDependencies": {
    "@actions/cache": "^3.2.2",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@babel/core": "^7.23.5",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.5",
    "@vercel/ncc": "^0.38.0",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.55.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "md5": "^2.3.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.1.1",
    "which": "^4.0.0"
  }
}
